/fen2board { % useage:  fenstr fen2board
	10 dict begin
	/fenstr exch def
	% /char2num << (p) -1 (n) -2 (b) -3 (r) -4 (q) -5 (k) -6
	%              (P)  1 (N)  2 (B)  3 (R)  4 (Q)  5 (K)  6  (1) 0 >> def
	/char2num << 112 -1 110 -2  98 -3 114 -4 113 -5 107 -6
	              80  1  78  2  66  3  82  4  81  5  75  6  49 0 >> def
	/a 64 array def
	/i 0 def
	fenstr {
		/c exch def
		c 32 eq { exit } if
		c 47 eq {  % skip /
		} {
			c 50 ge c 56 le and {  % its 2..8
				/n c 48 sub def {
					a i 0 put
					/i i 1 add def
					/n n 1 sub def
					n 1 lt { exit } if 
				} loop
			} {  % else its a character in the dict char2num
				a i  char2num c get  put
				/i i 1 add def
			} ifelse
		} ifelse
	} forall
	a true Board
	end
} bind def
