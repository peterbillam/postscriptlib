%!
%---------------- Constants -------------------

/dx 40 def                        % the size of the piece

%---------------- Functions -------------------

/PlaceAt {   % call: r(ow) c(ol)
	5 dict begin
    /col exch def /row exch def
    dx col mul dx row mul moveto    
	end
} bind def

/Square {   % call: row col
	5 dict begin
    /col exch def /row exch def
    col row add 2 mod 0 eq {
      row col Black
    } {
      row col White
    } ifelse 
	end
} bind def

/Black {   % call: row col
	5 dict begin
    /col exch def /row exch def
    row col PlaceAt (+) show
	end
} bind def

/White {   % call: row col
	5 dict begin
    /col exch def /row exch def
    row col PlaceAt (*) show
	end
} bind def

