/xmax currentpagedevice (PageSize) get 0 get def
/ymax currentpagedevice (PageSize) get 1 get def

/motif_p41a { gsave   % x y width linecolour areacolours motif_p41a
  10 dict begin   % this can hold up to ten new local variables
  [ /areacolours /b /g /r /width /y /x ] { exch def } forall
  x y translate  width 2 div dup scale  0 setlinejoin 0.05 setlinewidth
  r g b setrgbcolor
  -0.3 1 moveto -0.3 -1 lineto -1 -0.3 lineto 1 -0.3 lineto
  0.3 -1 lineto 0.3 1 lineto 1 0.3 lineto -1 0.3 lineto closepath
  gsave
    /colours areacolours def
    colours 0 rgbget setrgbcolor fill
    colours 1 rgbget setrgbcolor -0.3 -0.3 0.6 0.6 rectfill
  grestore
  stroke
  end grestore
} def
/motif_p41b { gsave   % x y width linecolour areacolours motif_p41b
  10 dict begin   % this can hold up to ten new local variables
  [ /areacolours /b /g /r /width /y /x ] { exch def } forall
  x y translate  width 2 div dup scale  0 setlinejoin 0.05 setlinewidth
  r g b setrgbcolor
  -0.5 1 moveto -0.5 -1 lineto 1 0.5 lineto -1 0.5 lineto 0.5 -1 lineto
  0.5 1 lineto -1 -0.5 lineto 1 -0.5 lineto closepath
  gsave
    /colours areacolours def
    colours 0 rgbget setrgbcolor fill
    colours 1 rgbget setrgbcolor -0.5 -0.5 1 1 rectfill
	colours 2 rgbget setrgbcolor newpath
      0 0.5 moveto 0.5 0 lineto 0 -0.5 lineto -0.5 0 lineto closepath fill
  grestore
  stroke
  end grestore
} def

/p41a {
  [ black black orange ] randomrgbget
  [ red violet yellow ] 2 randomrgbgetn motif_p41a
} def
/p41b {
  [ black black orange ] randomrgbget
  [ red darkviolet yellow darkred blue ] 3 randomrgbgetn motif_p41b
}def

darkred setrgbcolor 0 0 xmax ymax rectfill
/fringewidth xmax 134 div def
/majorborder xmax 17 mul 136 div def
/minorborder xmax 28 mul 136 div def
orange setrgbcolor
  0 0 fringewidth ymax rectfill
  xmax fringewidth sub 0 fringewidth ymax rectfill
  0 0 xmax fringewidth rectfill
  0 ymax fringewidth sub xmax fringewidth rectfill
  minorborder minorborder fringewidth ymax minorborder 2 mul sub rectfill
  xmax minorborder sub fringewidth sub minorborder
    fringewidth ymax minorborder 2 mul sub rectfill
  minorborder minorborder xmax minorborder 2 mul sub  fringewidth rectfill
  minorborder ymax minorborder sub fringewidth sub
    xmax minorborder 2 mul sub fringewidth rectfill

darkblue setrgbcolor
  majorborder majorborder
    xmax majorborder 2 mul sub minorborder majorborder sub rectfill
  majorborder ymax minorborder sub
    xmax majorborder 2 mul sub minorborder majorborder sub rectfill
  majorborder majorborder
    minorborder majorborder sub ymax majorborder 2 mul sub rectfill
  xmax minorborder sub majorborder
    minorborder majorborder sub ymax majorborder 2 mul sub rectfill

